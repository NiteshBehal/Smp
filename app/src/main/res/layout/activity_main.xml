<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:scaleType="fitXY"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44ffffff"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_child_meaning_clear"
                android:layout_width="0dp"
                android:layout_height="?android:actionBarSize"
                android:layout_weight="2"
                android:visibility="invisible"
                android:gravity="center"
                android:text="Clear"
                android:textColor="#99ff0000"
                android:textSize="13dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="?android:actionBarSize"
                android:layout_weight="6"
                android:gravity="center"
                android:text="Simplified Text"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_child_meaning_edit_done"
                android:layout_width="0dp"
                android:layout_height="?android:actionBarSize"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Edit"
                android:textColor="#990000ff"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>


        <Switch
            android:id="@+id/sw_enable_notification_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Enable search notification"
            android:textColor="#ffffff" />

        <ListView
            android:id="@+id/lv_meaning_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:divider="#00000000"
            android:scrollbars="none">


        </ListView>

    </LinearLayout>


</RelativeLayout>
