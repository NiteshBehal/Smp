<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp">


    <LinearLayout
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curv_bg_more_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_child_meaning_list_word_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vast"
                android:textColor="#AA000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_child_meaning_list_part_of_speech_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="|va:st|  adjective"
                android:textColor="#AA000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_child_meaning_list_word_first_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:minLines="2"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                android:textColor="#88000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:text="Oxford Dictionary of English"
                android:textColor="#77000000"
                android:textSize="10dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:src="@drawable/next" />

    </LinearLayout>


</LinearLayout>